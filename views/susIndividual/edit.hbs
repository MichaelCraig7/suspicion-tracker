<h1>Update {{susPerson.name}}'s Information</h1>

<form action='/user/{{userId}}/suspects' method="POST">
    <div>
        <label>Suspect Name</label>
        <input type='text' name='name' placeholder="{{susPerson.name}}"></input>
    </div>
    <div>
        <label>Offenses</label>
        <textarea type='text' name='offenses' placeholder="{{susPerson.offenses}}"></textarea>
    </div>
    <div>
        <label>Suspicion Level</label>
        <input type='number' name='suspicionLevel' placeholder="{{susPerson.suspicionLevel}}"</input>
    </div>
    <div>
        <label>Image</label>
        <input type='url' name='{{susPerson.img}}'></input>
    </div>

    <button type='submit'>Update</button>
</form>